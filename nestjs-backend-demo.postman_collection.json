					},
					"response": []
				},
				{
					"name": "Find all tickets",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Should return an array\", function () {",
									"    pm.response.to.be.json;",
									"",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.be.an('array');",
									"})",
									"",
									"pm.test(\"Should contain our created ticket\", function () {",
									"    if (!pm.collectionVariables.get(\"ticketId\")) return;",
									"",
									"    var jsonData = pm.response.json()",
									"    var ticket = jsonData.find(item => item.id === pm.collectionVariables.get(\"ticketId\"));",
									"    pm.expect(ticket).exist",
									"})"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
