				{
					"name": "Create ticket",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('should return 201 Created status', function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test('stores ticket id on success', function () {",
									"  if (pm.response.code !== 201) return;",
									"",
									"  const json = pm.response.json();",
									"  if (json && json.id != null) {",
									"    pm.collectionVariables.set('ticketId', String(json.id));",
									"  }",
									"",
									"    pm.expect(pm.collectionVariables.get('ticketId')).to.not.be.undefined;",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
